{
	"manifest_version": 2,
	"name": "sandmap",
	"version": "0.1.0",
	"description": "史书上的沙盒",

	"options_ui": {
		"page": "option.html",
		"open_in_tab": true
	},

	"browser_action": {
		"default_title": "天地沙盒"
	},

	"permissions": [
		"storage",
		"*://api.tianditu.gov.cn/*"
	],

	"content_security_policy": "script-src 'self' https://api.tianditu.gov.cn; object-src 'self'; script-src 'self' 'unsafe-inline",

	"background": {
		"scripts": ["dist/background.js"]
	}
}
